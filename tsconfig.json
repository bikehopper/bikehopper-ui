    "allowImportingTsExtensions": true,
    "allowJs": true,
    "target": "es6",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
